<h1>Welcome to the BWL Template Application</h1>

<h2>Login to Blueworks Live</h2>
<div style='color: yellow'>{{userdat.error}}</div>
<form action="/login" method="post">
<table>
  <tr>
    <td valign="top" width="100em">
      <label for="login">login</label>
    </td>
    <td valign="top">
      <input type="text" name="login" size="30" class="field" value="{{userdat.login}}">
    </td>
  </tr>
  <tr>
    <td valign="top">
      <label for="password">password</label>
    </td>
    <td valign="top">
      <input type="password" name="password" size="21" class="field" value="{{userdat.password}}">
      <input type="submit" name="method" value="LOGIN" class="button">
    </td>
  </tr>
</table>
</form>
